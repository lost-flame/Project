	<td>Price</td>
	<td>Quantity</td>
	</tr>
<%while(rs.next()){ %>
	<tr>
	<td><%=rs.getString(1)%></td>
	<td><%=rs.getString(2)%></td>
	<td><%=rs.getString(3)%></td>
	<td><%=rs.getString(4)%></td>
	</tr>
<%} %>
